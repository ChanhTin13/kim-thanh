    <div class="modal fade active default-popup" id="popup-thong-bao-mat-hang" data-backdrop="static" data-keyboard="false" tabindex="-1"
         role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title title-popup" id="exampleModalLongTitle" style="font-weight: bold">
                        Thay đổi mặt hàng
                    </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body position-relative thong-bao" style="padding-bottom:1.3rem;">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="wrap-form-login">
                                    <div class="needs-validation">
                                        <div class="form-group">
                                            <div class="form-check mt-2">
                                                <div class="form-check-label">
                                                    <div class="form-group ma-hang" style="display:flex;"></div>
                                                    <div class="form-group gia-nhap-1" style="display:flex;"></div>
                                                    <div class="form-group gia-nhap-2" style="display:flex;"></div>
                                                    <div class="form-group gia-nhap-3" style="display:flex;"></div>
                                                    <div class="form-group gia-ban-1" style="display:flex;"></div>
                                                    <div class="form-group gia-ban-2" style="display:flex;"></div>
                                                    <div class="form-group gia-ban-3" style="display:flex;"></div>
                                                    <div class="form-group gia-ban-4" style="display:flex;"></div>
                                                    <div class="form-group" style="display:flex;">
                                                        <p>Bạn có muốn tiếp tục?</p>
                                                    </div>
                                                </div>
                                                <div class="form-check-label">
                                                    <div class="form-group" style="display:flex;">
                                                        <p>Nhấn YES nếu muốn tiếp tục check các mã hàng khác</p>
                                                    </div>
                                                    <div class="form-group" style="display:flex;">
                                                        <p>Nhấn NO để bỏ qua bước check</p>
                                                    </div>
                                                    <div class="form-group" style="display:flex;">
                                                        <p>Nhấn CANCEL để tạm dừng việc ghi dữ liệu</p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="action-login mt-4">
                                            <div class="row">
                                                <div class="col-md-12 text-right">
                                                    <button id="btn-mat-hang-excel-yes" type="button" class="btn btn-primary">
                                                        Yes
                                                    </button>
                                                    <button id="btn-mat-hang-excel-no" type="button" class="btn btn-primary">
                                                        No
                                                    </button>
                                                    <button id="btn-mat-hang-excel-cancel" type="button" class="btn btn-primary" data-dismiss="modal">
                                                        Cancel
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade active default-popup" id="popup-check-mat-hang" data-backdrop="static" data-keyboard="false" tabindex="-1"
         role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
