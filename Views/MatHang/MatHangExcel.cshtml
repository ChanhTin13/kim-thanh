            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title title-popup" id="exampleModalLongTitle" style="font-weight: bold">
                        Xác nhận lần cuối
                    </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body position-relative thong-bao" style="padding-bottom:1.3rem;">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="wrap-form-login">
                                    <div class="needs-validation">
                                        <div class="form-group">
                                            <div class="form-check mt-2">
                                                <div class="form-check-label">
                                                    <div class="form-group check" style="display:flex;"></div>
                                                    <div class="form-group check-1" style="display:flex;"></div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="action-login mt-4">
                                            <div class="row">
                                                <div class="col-md-12 text-right">
                                                    <button id="btn-check-yes" type="button" class="btn btn-primary">
                                                        Yes
                                                    </button>
                                                    <button id="btn-check-no" type="button" class="btn btn-primary" data-dismiss="modal">
                                                        No
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
