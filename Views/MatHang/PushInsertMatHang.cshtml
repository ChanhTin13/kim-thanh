


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
</head>
<body>
    <h1>Push</h1>
    <button id="btn-create" class="btn btn-default ">
        Chạy push auto Insert
    </button>

    <button id="btn-update" class="btn btn-default ">
        Chạy push auto Update
    </button>

    <div class="container body-content">
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
    <script type="text/javascript" src="/App_Themes/js/datatables.min.js"></script>



    <script>
        $('#btn-create').click(function () {
            $(this).prop('disabled', true);
            PushAutoInsert();
        })

        $('#btn-update').click(function () {
            $(this).prop('disabled', true);
            PushAutoUpdate();
        })

        function PushAutoInsert() {
            return $.ajax({
                type: 'POST',
                url: '/MatHang/PushDataInsertMatHang',
                success: function (res) {
                    console.log(res);
                    if (res.status == 1) {
                        PushAutoInsert();
                    }
                    else {
                        alert("Đã đẩy hết mặt hàng mới")
                    }
                }
            });
        }

        function PushAutoUpdate() {
            return $.ajax({
                type: 'POST',
                url: '/MatHang/PushDataUpdateMatHang',
                success: function (res) {
                    console.log(res);
                    if (res.status == 1) {
                        PushAutoUpdate();
                    }
                    else {
                        alert("Đã đẩy hết mặt hàng mới")
                    }
                }
            });
        }
    </script>
</body>
</html>
