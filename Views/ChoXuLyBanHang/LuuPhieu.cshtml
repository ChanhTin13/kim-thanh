

@{
    ViewBag.Title = "DanhSachPhienKiemHang";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}
<link href="~/App_Themes/select2/css/select2.min.css" rel="stylesheet" />
<style>
    #table-chi-tiet-phieu-luu-phieu_filter {
        display: none;
    }
    #sua-vi-tri .form-group > input {
        height: 30px;
        border-radius: 5px;
        padding-left: 8px !important;
    }

    input[readonly] {
        background: #ccc
    }

    #tb-import-vitri input {
        height: 30px;
        border-radius: 5px;
        width: 100%;
        padding: 5px;
    }
    @@media only screen and (min-width:1440px) and (max-width: 2560px) {
        .wrap-height-table-2 {
            height: 400px !important
        }
    }
</style>
<main class="wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link" id="choxuly"
                           href="~/ChoXuLyBanHang/ChoXuLy" role="tab"
                           aria-controls="home" aria-selected="false">
                            Chờ xử lý
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" id="luuphieu"
                           href="~/ChoXuLyBanHang/LuuPhieu" role="tab" aria-controls="profile"
                           aria-selected="true">Lưu phiếu</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="cholayhang"
                           href="~/ChoXuLyBanHang/ChoLayHang" role="tab" aria-controls="profile"
                           aria-selected="false">Chờ lấy hàng</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="thanhtoan"
                           href="~/ChoXuLyBanHang/ThanhToanPhieu" role="tab" aria-controls="profile"
                           aria-selected="false">Đã xử lý</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="huyphieu"
                           href="~/ChoXuLyBanHang/HuyPhieu" role="tab" aria-controls="profile"
                           aria-selected="false">Hủy phiếu</a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="wrap-table__header">
            <div class="row">
                <div class="col-md-12">
                    <div class="box-choose-time" id="date-vitri">
                        <p class="mr-2">Từ</p>
                        <input class="mr-2 datetimepicker date-only" name="chooseDate_From" data-date-format="mm/dd/yyyy">
                        <p class="mr-2">Đến</p>
                        <input class="mr-2 datetimepicker date-only" name="chooseDate_To" data-date-format="mm/dd/yyyy">

                        <select id="sl_LoaiHD" class="mr-2">
                            <option value="">Loại hóa đơn</option>
                            <option value="0">Hóa đơn bán hàng</option>
                            <option value="2">Phiếu nhập kho</option>
                            <option value="1">Hàng bán trả lại</option>
                        </select>

                        <div class="list-button">
                            <a href="#" class="btn btn-export
                            inline" id="btn-search-phienkiemhang">
                                <img src="/App_Themes/assets/images/btn-search.png" alt="" class="inline"><span class="inline">Tìm kiếm</span>
                            </a>
                            <a href="#" class="btn btn-print
                            inline" id="btn-in-phieuluu">
                                <img src="/App_Themes/assets/images/btn-print.png"
                                     alt="" class="inline"><span class="inline">In</span>
                            </a>
                            <a href="#" class="btn btn-print
                            inline" id="btn-in-dsphieuluu">
                                <img src="/App_Themes/assets/images/btn-print.png"
                                     alt="" class="inline"><span class="inline">In danh sách phiếu</span>
                            </a>
                            <a href="#" class="btn btn-export
                            inline" id="excel-luu-phieu">
                                <img src="/App_Themes/assets/images/btn-export.png"
                                     alt="" class="inline"><span class="inline">Xuất</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="wrap-table__body">
            <div class="wrap-height-table">
                <table class="table display table-striped" style="width: 100%;"
                       id="table-luu-phieu">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Thời gian</th>
                            <th>Mã đơn</th>
                            <th>Tên KH</th>
                            <th>Ghi chú</th>
                            <th>Số tiền</th>
                            <th>Nhân viên</th>
                            <th>Ghi chú phụ</th>
                            <th>Loại</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
    <div class="modal fade default-popup popup-them-so-du-quy" id="chinh-sua-phieu" @*data-keyboard="true" data-backdrop="static*@
         tabindex="-1"
         role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title title-popup" id="exampleModalLongTitle">
                        Chỉnh sửa phiếu
                    </h5>
                    <button type="button" class="close" data-dismiss="modal"
                            aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="default-form">
                                    <div class="form-group">
                                        <label for="">Ghi chú phụ </label>
                                        <input name="txt-ghi-chu" type="text" class="col-9 p-0" />
                                        <input type="hidden" name="bhdid" />
                                        <input type="hidden" name="loai-dh" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" id="btn-ghi-chu">Ghi chú</button>
                    <button type="button" class="btn btn-primary" id="btn-thanh-toan">Đã xử lý</button>
                    <button type="button" class="btn btn-success" id="btn-cho-lay-hang">Chờ lấy hàng</button>
                    <button type="button" class="btn btn-danger" id="btn-huy">Hủy</button>
                    @*<button type="button" class="btn btn-secondary"
                data-dismiss="modal">
            Đóng
        </button>*@
                </div>
            </div>
        </div>
    </div>
    <div class="modal-them-order">
        <div class="modal fade default-popup popup-them-order" id="chi-tiet-hoa-don"
             tabindex="-1"
             role="dialog"
             aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title title-popup"
                            id="exampleModalLongTitle">
                            Xem chi tiết phiếu bán hàng
                        </h5>
                        <button type="button" class="close" data-dismiss="modal"
                                aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    @*Thêm/Sửa Order*@
                    <div class="modal-body">
                        <div class="container-fluid mt-3">
                            <div class="wrap-box-border bg-white position-relative
                            mt-3">
                                <p class="title-special">Chi tiết phiếu</p>
                                <div id="qrcode"></div>
                                <div class="box-border p-2" style="border: none;">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="wrap-height-table-2">
                                                <table border="1" class="display table
                                                table-striped" style="width: 100%;"
                                                       id="table-chi-tiet-phieu-luu-phieu">
                                                    <thead>
                                                        <tr>
                                                            <th>#</th>
                                                            <th>Mã hàng</th>
                                                            <th>Tên hàng</th>
                                                            <th>Số lượng</th>
                                                            <th>Đơn vị</th>
                                                            <th>Đơn giá</th>
                                                            <th>Thành tiền</th>
                                                            <th>Ghi chú</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody></tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary"
                                data-dismiss="modal">
                            Đóng
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

@section myScripts{
    <script src="~/App_Themes/select2/js/select2.full.min.js"></script>
    <script>
        $(document).ready(function () {
            $(document).keydown(async function (e) {

                if (e.which == 113) {
                    e.preventDefault();
                    $('#choxuly')[0].click();
                }
                else if (e.which == 114) {
                    e.preventDefault();
                    $('#luuphieu')[0].click();
                }
                else if (e.which == 115) {
                    e.preventDefault();
                    $('#thanhtoan')[0].click();
                }
                else if (e.which == 117) {
                    e.preventDefault();
                    $('#btn-in-dsphieuluu').click();
                }
                else if (e.which == 118) {
                    e.preventDefault();
                    var id = $('#table-luu-phieu tbody tr.selected').attr('data-id');
                    if (id != undefined && id != null) {
                        $.ajax({
                            async: true,
                            method: 'POST',
                            url: '/ChoXuLyBanHang/XuLyPhieuCho',
                            data: { "BHDID": id, "TrangThai": 3 },
                            success: function (msg) {
                                if (msg.status == 1) {
                                    tbLuuPhieu.columns.adjust().draw();
                                    toast.create({
                                        title: 'Notification!',
                                        text: msg.message,
                                        icon: 'check',
                                        classBackground: 'noti-success',
                                        timeout: 3000
                                    });
                                    var link = '/BanHang/InThanhToanXepHangBanHang?bhdid=' + id;
                                    window.open(link);
                                    //var link = window.location.origin + "/ChoXuLyBanHang/ThanhToanPhieu";
                                    //window.location.href = link;
                                }
                                else if (msg.status == 2) {
                                    toast.create({
                                        title: 'Notification!',
                                        text: msg.message,
                                        icon: 'error_outline',
                                        classBackground: 'noti-error',
                                        timeout: 3000
                                    });
                                }
                                else if (msg.status == 3) {
                                    toast.create({
                                        title: 'Notification!',
                                        text: msg.message,
                                        icon: 'error_outline',
                                        classBackground: 'noti-error',
                                        timeout: 3000
                                    });
                                    location.reload();
                                }
                            }
                        })
                    }
                    else {
                        toast.create({
                            title: 'Thông Báo!',
                            text: 'Hãy chọn một đơn hàng',
                            icon: 'error_outline',
                            classBackground: 'noti-error',
                            timeout: 3000
                        })
                    }
                }
                else if (e.which == 119) {
                    e.preventDefault();
                    var id = $('#table-luu-phieu tbody tr.selected').attr('data-id');
                    if (id != undefined && id != null) {
                        if (confirm('Bạn chắc chắn muốn hủy xếp hàng cho đơn này không?')) {
                            $.ajax({
                                async: true,
                                method: 'POST',
                                url: '/ChoXuLyBanHang/XuLyPhieuCho',
                                data: { "BHDID": id, "TrangThai": 4 },
                                success: function (msg) {
                                    if (msg.status == 1) {
                                        tbLuuPhieu.columns.adjust().draw();
                                        toast.create({
                                            title: 'Notification!',
                                            text: msg.message,
                                            icon: 'check',
                                            classBackground: 'noti-success',
                                            timeout: 3000
                                        });
                                        //var link = window.location.origin + "/ChoXuLyBanHang/HuyPhieu";
                                        //window.location.href = link;
                                    }
                                    else if (msg.status == 2) {
                                        toast.create({
                                            title: 'Notification!',
                                            text: msg.message,
                                            icon: 'error_outline',
                                            classBackground: 'noti-error',
                                            timeout: 3000
                                        });
                                    }
                                    else if (msg.status == 3) {
                                        toast.create({
                                            title: 'Notification!',
                                            text: msg.message,
                                            icon: 'error_outline',
                                            classBackground: 'noti-error',
                                            timeout: 3000
                                        });
                                        location.reload();
                                    }
                                }
                            });
                        }
                    }
                    else {
                        toast.create({
                            title: 'Thông Báo!',
                            text: 'Hãy chọn một đơn hàng',
                            icon: 'error_outline',
                            classBackground: 'noti-error',
                            timeout: 3000
                        })
                    }
                }
                else if (e.which == 120) {
                    e.preventDefault();
                    $('#table-luu-phieu_filter label input').focus();
                }
                else if (e.which == 121) {
                    e.preventDefault();
                    $('#huyphieu')[0].click();
                }
            })
            //$('input[name="chooseDate_From"]').val(moment(new Date()).format('DD/MM/yyyy'));
            //$('input[name="chooseDate_To"]').val(moment(new Date()).format('DD/MM/yyyy'));
            //let fdate = moment(new Date()).format('DD/MM/yyyy');
            //let tdate = moment(new Date()).format('DD/MM/yyyy');
            let tbLuuPhieu_filterValues = {};
            let tbLuuPhieu = $('#table-luu-phieu').DataTable({
                serverSide: true,
                bFilter: false,
                bInfo: false,
                ajax: function (data, callback, settings) {
                    tbLuuPhieu_filterValues.draw = data.draw;
                    tbLuuPhieu_filterValues.start = data.start;
                    tbLuuPhieu_filterValues.length = data.length;
                    tbLuuPhieu_filterValues.order = data.order[0].column;
                    tbLuuPhieu_filterValues.dir = data.order[0].dir;
                    tbLuuPhieu_filterValues.search = data.search["value"];
                    $.ajax({
                        url: '/ChoXuLyBanHang/LoadDataLuuPhieu',
                        method: 'GET',
                        data: tbLuuPhieu_filterValues,
                        success: function (msg) {
                            if (msg.status == 2) {
                                toast.create({
                                    title: 'Notification!',
                                    text: msg.message,
                                    icon: 'error_outline',
                                    classBackground: 'noti-error',
                                    timeout: 3000
                                });
                                return false;
                            }
                            else if (msg.status == 3) {
                                if (tbLuuPhieu_filterValues.draw != 1) {
                                    toast.create({
                                        title: 'Notification',
                                        text: msg.message,
                                        icon: 'error-outline',
                                        classBackground: 'noti-error',
                                        timeout: 3000
                                    });
                                    location.reload();
                                    return false;
                                }
                            }
                        }
                    }).done(callback, () => { });
                },
                "order": [[1, "desc"]],
                columnDefs: [
                    {
                        "targets": 0,
                        "data": null
                    },
                    {
                        "targets": 1,
                        "data": "NGAYHDSTRING"
                    },
                    {
                        "targets": 2,
                        "data": "BHDCODE"
                    },
                    {
                        "targets": 3,
                        "data": "KHTEN"
                    },
                    {
                        "targets": 4,
                        "data": "DIENGIAI"
                    },
                    {
                        "targets": 5,
                        "data": "TONGTIEN",
                        render: function (data) {
                            return data.toString().replace(/(\d)(?=(\d{3})+(?!\d))/g, '$1.');
                        }
                    },
                    {
                        "targets": 6,
                        "data": "NHANVIENIN"
                    },
                    {
                        "targets": 7,
                        "data": "GHICHUPHU"
                    },

                    {
                        "targets": 8,
                        "data": "LOAI",
                        render: function (data, type, row) {
                            if (data == "NH") {
                                return '<a type="button" class="btn btn-warning text-white mr-1 btn-custom">NH</a>';
                            } else if (data == "TH") {
                                return '<a type="button" class="btn btn-danger text-white mr-1 btn-custom" >TH</a> ';
                            } else {
                                return '<a type="button" class="btn btn-success text-white mr-1 btn-custom">BH</a>';
                            }

                        }
                    },

                    {
                        "targets": 9,
                        "data": "BHDID",
                        render: function (data, type, row) {
                            return '<a type="button" id="print-xephang" value="' + data + '" class="btn btn-success text-white mr-1">Sửa phiếu</a>';
                        }
                    },
                    {
                        "targets": 0,
                        "orderable": false
                    }
                ],
                fnCreatedRow: function (nRow, data, iDataIndex) {
                    $(nRow).attr('data-id', data.BHDID);
                    $(nRow).attr('data-type', data.LOAI);
                },
                "fnRowCallback": function (nRow, data, iDisplayIndex) {
                    var info = $(this).DataTable().page.info();
                    $("td:nth-child(1)", nRow).html(info.start + iDisplayIndex + 1);
                },
                scrollX: true,
                scrollResize: true,
                scrollY: 100,
                scrollCollapse: true,

                paging: true,
                searching: true,
                pageLength: 10,
                lengthChange: false,

                scroller: {
                    loadingIndicator: true,
                    displayBuffer: 50
                },
            });

            //Search ngày -> ngày
            $('#btn-search-phienkiemhang').click(function () {
                tbLuuPhieu_filterValues.FromDate = $('#date-vitri input[name="chooseDate_From"]').val();
                tbLuuPhieu_filterValues.ToDate = $('#date-vitri input[name="chooseDate_To"]').val();
                tbLuuPhieu_filterValues.Loai = $('#sl_LoaiHD option:selected').val();
                tbLuuPhieu.columns.adjust().draw();
            });

            //Click
            $(document).on('click', '#table-luu-phieu tbody tr', function () {
                $(this).addClass('selected');
                $('#table-luu-phieu tbody tr').not(this).removeClass('selected');
            });

            ////Double Click
            //$(document).on('dblclick', '#table-luu-phieu tbody tr', async function () {
            //    $(this).addClass('selected');
            //    let data = tbLuuPhieu.row(this).data();
            //    $('input[name="bhdid"]').val(data.BHDID);
            //    $('input[name="txt-ghi-chu"]').val(data.GHICHUPHU);
            //    $('#chinh-sua-phieu').modal();
            //});


            $('#table-luu-phieu tbody').on('click', 'a[type="button"]', function () {
                debugger
                let data = tbLuuPhieu.row($(this).parents()).data();
                $('input[name="bhdid"]').val(data.BHDID);
                $('input[name="loai-dh"]').val(data.type);
               
                $('input[name="txt-ghi-chu"]').val(data.GHICHUPHU);
                $('#chinh-sua-phieu').modal();
            });

            $('#btn-ghi-chu').click(function () {
                let id = $('input[name="bhdid"]').val();
                let GhiChuPhu = $('input[name="txt-ghi-chu"]').val();
                var type = $('input[name="loai-dh"]').val();
                $.ajax({
                    type: 'POST',
                    url: '/ChoXuLyBanHang/XuLyPhieuLuu?BHDID=' + id + '&TrangThai=' + 0 + '&GhiChuPhu=' + GhiChuPhu + '&Type=' + type,
                    dataType: "json",
                    success: function (msg) {
                        if (msg.status == 1) {
                            $('#chinh-sua-phieu').modal('hide');
                            tbLuuPhieu.draw();
                            toast.create({
                                title: 'Notification!',
                                text: msg.message,
                                icon: 'check',
                                classBackground: 'noti-success',
                                timeout: 3000
                            })
                        }
                        else if (msg.status == 2) {
                            toast.create({
                                title: 'Notification!',
                                text: msg.message,
                                icon: 'error_outline',
                                classBackground: 'noti-error',
                                timeout: 3000
                            })
                        } else if (msg.status == 3) {
                            toast.create({
                                title: 'Notification!',
                                text: msg.message,
                                icon: 'error_outline',
                                classBackground: 'noti-error',
                                timeout: 3000
                            });
                            location.reload();
                        }
                    }
                })
            })

            $('#btn-thanh-toan').click(function () {
                let id = $('input[name="bhdid"]').val();
                let GhiChuPhu = $('input[name="txt-ghi-chu"]').val();
                var type = $('input[name="loai-dh"]').val();

                $.ajax({
                    type: 'POST',
                    url: '/ChoXuLyBanHang/XuLyPhieuLuu?BHDID=' + id + '&TrangThai=' + 3 + '&GhiChuPhu=' + GhiChuPhu + '&Type=' + type,
                    dataType: "json",
                    success: function (msg) {
                        if (msg.status == 1) {
                            $('#chinh-sua-phieu').modal('hide');
