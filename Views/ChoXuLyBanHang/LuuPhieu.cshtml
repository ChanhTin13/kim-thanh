                                timeout: 3000
                            })
                        }
                        else if (msg.status == 2) {
                            toast.create({
                                title: 'Notification!',
                                text: msg.message,
                                icon: 'error_outline',
                                classBackground: 'noti-error',
                                timeout: 3000
                            })
                        } else if (msg.status == 3) {
                            toast.create({
                                title: 'Notification!',
                                text: msg.message,
                                icon: 'error_outline',
                                classBackground: 'noti-error',
                                timeout: 3000
                            });
                            location.reload();
                        }
                    }
                })
            })

            $('#btn-cho-lay-hang').click(function () {
                let id = $('input[name="bhdid"]').val();
                let GhiChuPhu = $('input[name="txt-ghi-chu"]').val();
                var type = $('input[name="loai-dh"]').val();
                $.ajax({
                    type: 'POST',
                    url: '/ChoXuLyBanHang/XuLyPhieuLuu?BHDID=' + id + '&TrangThai=' + 5 + '&GhiChuPhu=' + GhiChuPhu + '&Type=' + type,
                    dataType: "json",
                    success: function (msg) {
                        if (msg.status == 1) {
                            $('#chinh-sua-phieu').modal('hide');
                            tbLuuPhieu.draw();
                            toast.create({
                                title: 'Notification!',
                                text: msg.message,
                                icon: 'check',
                                classBackground: 'noti-success',
                                timeout: 3000
                            })
                        }
                        else if (msg.status == 2) {
                            toast.create({
                                title: 'Notification!',
                                text: msg.message,
                                icon: 'error_outline',
                                classBackground: 'noti-error',
                                timeout: 3000
                            })
                        } else if (msg.status == 3) {
                            toast.create({
                                title: 'Notification!',
                                text: msg.message,
                                icon: 'error_outline',
                                classBackground: 'noti-error',
                                timeout: 3000
                            });
                            location.reload();
                        }
                    }
                })
            })

            $('#btn-huy').click(function () {
                let id = $('input[name="bhdid"]').val();
                let GhiChuPhu = $('input[name="txt-ghi-chu"]').val();
                var type = $('input[name="loai-dh"]').val();

                if (confirm('Bạn chắc chắn muốn hủy xếp hàng cho đơn này không?')) {
                    $.ajax({
                        type: 'POST',
                        url: '/ChoXuLyBanHang/XuLyPhieuLuu?BHDID=' + id + '&TrangThai=' + 4 + '&GhiChuPhu=' + GhiChuPhu + '&Type=' + type,
                        dataType: "json",
                        success: function (msg) {
