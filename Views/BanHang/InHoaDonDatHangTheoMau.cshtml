@using KimThanh.Controllers
@model BanHangController.PrintBHDModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>In Bán Hóa Đơn</title>
</head>
<body style="font-size: 12px;">
    <table width="300px" border="0" cellspacing="0" cellpadding="0" class="no-padding">
        <tbody>
            <tr>
                <td align="center" style="font-size: 16px">
                    <div style="margin-bottom: 20px;">
                        <img width="77" height="77" src="@Model.LinkQrCode" alt="">
                        <p style="margin-bottom: 8px;margin-top: 0;"> Mã QR : @Model.Detail.BHDCODE </p>
                        <p style="margin: 0px 0;"> Ngày tạo đơn : @Model.Detail.NGAYHD.Value.ToString("dd/MM/yyyy HH:mm") </p>
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <table class="table-pnk display" id="table-phieu-xuat-kho" style="width: 100%;border-collapse: collapse;">
                        <thead>
                            <tr>
                                <th style="border-top: 1px solid black; border-left: 1px solid black; border-right: 1px solid black; padding: 5px 2px">Mã hàng</th>
                                <th style="width: 30% ;border-top: 1px solid black; border-left: 1px solid black; border-right: 1px solid black; padding: 5px 2px">Tên hàng</th>
                                <th style="border-top: 1px solid black; border-left: 1px solid black; border-right: 1px solid black; padding: 5px 2px">SL</th>
                                <th style="width: 20% ;border-top: 1px solid black; border-left: 1px solid black; border-right: 1px solid black; padding: 5px 2px">Vị trí</th>
                                <th style="max-width: 40%; min-width: 20%; width: 30%; border-top: 1px solid black; border-left: 1px solid black; border-right: 1px solid black; padding: 5px 2px">Ghi chú</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var cul = new System.Globalization.CultureInfo("vi-VN");
                                foreach (var item in Model.DSMH)
                                {
                                    var sl = (int)item.SOLUONG;
                                    <tr>
                                        <td style="white-space:normal;text-align:left; border-top: 1px solid black; border-left: 1px solid black; border-right: 1px solid black; padding: 5px 2px">@item.MHCODE</td>
                                        <td style="white-space:normal;text-align:left; border-top: 1px solid black; border-left: 1px solid black; border-right: 1px solid black; padding: 5px 2px">@item.MHTEN</td>
                                        <td style="white-space:normal; border-top: 1px solid black; border-left: 1px solid black; border-right: 1px solid black; padding: 5px 2px">@String.Format(cul, "{0:N0}", sl)</td>
                                        <td style="white-space:normal; border-top: 1px solid black; border-left: 1px solid black; border-right: 1px solid black; padding: 5px 2px">@item.ViTri</td>
                                        <td style="white-space:normal; border-top: 1px solid black; border-left: 1px solid black; border-right: 1px solid black; padding: 5px 2px">@item.GHICHU</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </td>
            </tr>
        </tbody>
    </table>
    <script src="~/App_Themes/js/jquery.js"></script>
    <script>
        $(document).ready(function () {
            window.print();
        })
    </script>
    <style>
        tbody tr:last-child td{
            border-bottom: 1px solid black;
        }
    </style>
</body>
</html>


