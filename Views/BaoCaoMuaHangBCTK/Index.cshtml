<style>
    .dataTables_filter, .dataTables_info {
        display: none;
    }
    @@media only screen and (min-width:768px) and (max-width:1439px) {
        .sidebar-search {
            width: 128%;
        }

        .custom {
            padding-left: 3%;
        }
    }
    #ul-don-hang ul {
        list-style-type: none;
        margin: 0;
        padding: 0;
        display: inline-block;
        *display: inline;
        zoom: 1
    }

    .tab-footer {
        border-top: 1px solid #dee2e6;
        border-bottom: none;
        margin-top: 15px;
    }

    .disabled-hethang {
        pointer-events: none;
        opacity: 0.4;
    }

    .nav-tabss .nav-items.show .nav-link, .nav-tabss .nav-links.active {
        border-bottom: 1px solid #0000001a;
        border-top: none;
        margin-top: -1px;
        border-radius: 0;
        border-bottom-right-radius: 3px;
        border-bottom-left-radius: 3px;
    }

    .quare {
        height: 20px;
        width: 20px;
    }

    #home-child {
        position: relative;
    }

        #home-child a {
            text-decoration: none;
        }

    #home-root a {
        text-decoration: none;
        vertical-align: middle;
    }

    .haschild:before {
        font-family: "Font Awesome 5 Free";
        content: "\f0fe";
        display: inline-block;
        padding-right: 3px;
        vertical-align: middle;
        font-weight: 900;
    }

    .haschild.checked:before {
        font-family: "Font Awesome 5 Free";
        content: "\f146";
        display: inline-block;
        padding-right: 3px;
        vertical-align: middle;
        font-weight: 900;
    }

    .btn-home:before {
        font-family: "Font Awesome 5 Free";
        content: "\f015";
        display: inline-block;
        padding-right: 3px;
        vertical-align: middle;
        font-weight: 900;
    }

    .list-group-item-action:before {
        font-family: "Font Awesome 5 Free";
        content: "\f101";
        display: inline-block;
        padding-right: 10px;
        vertical-align: middle;
        font-weight: 900;
        color: #007bff;
    }

    .dia-chi-con {
        margin-left: 15px
    }

    .diachi.danhmuc {
        margin-left: 0px;
    }

        .diachi.danhmuc.haschild {
            margin-left: 0px;
        }

    .form-add label {
        width: 20%;
    }

    .activeee {
        color: red;
    }

    .style-border {
        border-left: 1px dashed #007bff;
        margin-left: 6px;
    }

    .input-align {
        float: right;
        clear: both;
        text-align: right;
    }

    .shorter-text {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden; 
        text-overflow: ellipsis;
    }

    .jstree-showroom li.jstree-node > a {
        white-space: normal !important;
        height: auto !important;
        padding-right: 24px;
    }

        .jstree-showroom li.jstree-node > a .jstree-themeicon {
            background: url("/App_Themes/assets/images/chi-nhanh.png") 0px 0px no-repeat !important;
        }

    .jstree-showroom li.jstree-node > ul > li.jstree-node > a .jstree-themeicon {
        background: url("/App_Themes/assets/images/kho-hang.png") 0px 0px no-repeat !important;
    }
</style>

